{
  "name": "DataWorks Project",
  "dockerFile": "Dockerfile",
  "forwardPorts": [8000],
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "docker-in-docker": "latest"
  },
  "runArgs": [
    "--privileged",  // Ensures Docker runs smoothly
    "--env", "AIPROXY_TOKEN=${AIPROXY_TOKEN}",  // Correct token name
    "--env", "LLMFOUNDRY_TOKEN=${LLMFOUNDRY_TOKEN}"
  ],
  "mounts": [
    "source=/data,target=/data,type=bind"
  ],
  "remoteUser": "vscode",  // Ensures correct user permissions
  "postCreateCommand": "docker --version && python --version"  // Debugging
}
